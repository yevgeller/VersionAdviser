@page
@model IndexModel
@using VersionAdviser.Helpers 
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Enter a version number of a piece of software to see if there any other software with a higher version.</p>
</div>
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnteredVersion" class="control-label"></label>
                <input asp-for="EnteredVersion" class="form-control" />
                <span asp-validation-for="EnteredVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-primary" />
            </div>
        </form>
        <label>@Model.ProcessedVersion</label>
        @if (Model.NewerVersions.Any())
        {
        <ul>
            @foreach (Software s in Model.NewerVersions)
            {
                <li><strong>@s.Name</strong>, Version <strong>@s.Version</strong></li>
            }
            </ul>
        }
    </div>
</div>