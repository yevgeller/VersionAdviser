@page
@model VersionAdviser.Pages.ClientSideVersionAdviserModel
@{
}


<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnteredVersion" class="control-label"></label>
                <input asp-for="EnteredVersion" class="form-control" />
                <span asp-validation-for="EnteredVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <label>@Model.ProcessedVersion</label>
        @if (Model.NewerVersions.Any())
        {
            @foreach (Software s in Model.NewerVersions)
            {
                <div>@s.ToString()</div>
            }
        }
    </div>
</div>

